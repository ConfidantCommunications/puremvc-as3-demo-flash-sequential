	import flash.display.StageAlign;
	import flash.display.StageScaleMode;
	import org.puremvc.as3.multicore.demos.sequential.ApplicationFacade;

	/**	 * The main application.	 */	[SWF(width="500", height="300", frameRate="30", backgroundColor="#CCCCCC")]	public class Sequential extends Sprite	{	 	public static const NAME:String	="Sequential";		public function Sequential() 		{			init();		}		/**		 * Set the output display component.		 */		public function set outputComponent( output:Sprite ):void		{			output.x = 50;			output.y = 50;			stage.addChild(output);		}				/**		 * Initialize the application.		 */		private function init() : void		{			var facade:ApplicationFacade = ApplicationFacade.getInstance( NAME );			stage.scaleMode	= StageScaleMode.NO_SCALE;			stage.align	= StageAlign.TOP_LEFT;			facade.startup( this );		}	}}